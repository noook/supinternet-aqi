<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_cell"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/city_position"
        app:layout_constraintTop_toTopOf="@id/list_item_cell"
        app:layout_constraintBottom_toBottomOf="@id/list_item_cell"
        app:layout_constraintStart_toStartOf="@id/list_item_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        tools:text="1"/>

    <ImageView
        android:id="@+id/city_flag"
        tools:src="@drawable/ic_flag_country_in"
        app:layout_constraintTop_toTopOf="@id/list_item_cell"
        app:layout_constraintBottom_toBottomOf="@id/list_item_cell"
        app:layout_constraintStart_toEndOf="@id/city_position"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/city_name"
        app:layout_constraintStart_toEndOf="@id/city_flag"
        app:layout_constraintTop_toTopOf="@id/city_flag"
        app:layout_constraintBottom_toBottomOf="@id/city_flag"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Delhi, India"/>

    <TextView
        android:id="@+id/pollution_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/list_item_cell"
        app:layout_constraintEnd_toEndOf="@id/list_item_cell"
        app:layout_constraintBottom_toBottomOf="@id/list_item_cell"
        tools:text="183" />

</androidx.constraintlayout.widget.ConstraintLayout>

